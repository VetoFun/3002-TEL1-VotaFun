{
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ],
    "environments": {
        "test": {
            "addons": [
                "heroku-redis:in-dyno"
            ],
            "env": {
                "APP_SETTINGS": "src.config.TestingConfig",
                "REDIS_VERSION": "7.2"
            },
            "scripts": {
                "test-setup": "cd backend && pip install -r requirements.txt",
                "test": "pytest tests/ -v"
            }
        }
    }
}
